<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="30pt"
                  android:orientation="horizontal">
        <TextView android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:fontFamily="@font/samsungsansbold"
                  android:layout_weight="1"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:paddingLeft="10pt"
                  android:text="5000"
                  android:id="@+id/amt_tv"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:fontFamily="@font/samsungsansbold"
                  android:layout_weight="2"
                  android:paddingLeft="10pt"
                  android:text="2019-04-15 02:07:00"
                  android:id="@+id/tmestamp_tv"/>
    </LinearLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="0.1pt"
          android:background="@color/colorPrimaryDark"/>

</LinearLayout>