<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1"
                                            android:id="@+id/payment_rv">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:background="#f2f2f2"
                  android:layout_weight="3">


        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:layout_margin="5pt">

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:text="Advance Amount : "
                          android:fontFamily="@font/samsungsansregular"
                          android:gravity="center_vertical"
                          android:background="@color/colorWhite"
                          android:padding="5pt"
                          android:layout_margin="0.2pt"
                          android:layout_weight="1"/>
                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:text="15000"
                          android:background="@color/colorWhite"
                          android:layout_margin="0.2pt"
                          android:fontFamily="@font/samsungsansbold"
                          android:padding="5pt"
                          android:gravity="center_vertical|right"
                          android:layout_weight="1"
                          android:id="@+id/advance_amt"/>

            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:text="Paid Amount : "
                          android:padding="5pt"

                          android:fontFamily="@font/samsungsansregular"
                          android:gravity="center_vertical"
                          android:background="@color/colorWhite"
                          android:layout_margin="0.2pt"
                          android:layout_weight="1"/>
                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:text="5000"
                          android:padding="5pt"
                          android:fontFamily="@font/samsungsansbold"
                          android:background="@color/colorWhite"
                          android:layout_margin="0.2pt"
                          android:gravity="center_vertical|right"
                          android:layout_weight="1"
                          android:id="@+id/paid_amt"/>

            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:text="Remaining Amount : "
                          android:padding="5pt"
                          android:fontFamily="@font/samsungsansregular"
                          android:background="@color/colorWhite"
                          android:layout_margin="0.2pt"
                          android:gravity="center_vertical"
                          android:layout_weight="1"/>
                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:text="20000"
                          android:padding="5pt"
                          android:background="@color/colorGreen"
                          android:textColor="@color/colorWhite"
                          android:layout_margin="0.2pt"
                          android:fontFamily="@font/samsungsansbold"
                          android:gravity="center_vertical|right"
                          android:layout_weight="1"
                          android:id="@+id/remaining_amt"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>