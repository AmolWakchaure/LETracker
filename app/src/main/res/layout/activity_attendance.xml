<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:background="@color/colorPrimaryDark"
                  android:layout_height="25pt">

        <ImageView
                android:id="@+id/go_back"
                android:layout_width="fill_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/ripple_effect"
                android:src="@drawable/ic_back_arrow"
                android:layout_height="fill_parent">


        </ImageView>
        <TextView android:layout_width="fill_parent"

                  android:text="Attendance"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                  android:gravity="center_vertical"
                  android:paddingLeft="15pt"
                  android:textColor="@color/colorWhite"
                  android:fontFamily="@font/samsungsansregular"
                  android:layout_weight="1"
                  android:layout_height="fill_parent"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical"
                  android:id="@+id/parrent_layout">

        <TextView android:layout_width="fill_parent"
                  android:layout_height="25pt"
                  android:gravity="center"
                  android:fontFamily="@font/samsungsansbold"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:text=""
                  android:id="@+id/monthYr_tv"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical">


            <android.support.v7.widget.RecyclerView android:layout_width="fill_parent"
                                                    android:layout_height="fill_parent"
                                                    android:layout_weight="1"
                                                    android:id="@+id/calender_rv">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:background="#f2f2f2"
                          android:layout_weight="1.2">

                <ScrollView android:layout_width="fill_parent"
                            android:layout_height="fill_parent">


                    <LinearLayout android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_margin="5pt">
                        <TextView android:layout_width="fill_parent"
                                  android:layout_height="fill_parent"
                                  android:text="Name : Amol Babasaheb Wakachaure"
                                  android:fontFamily="@font/samsungsansbold"
                                  android:gravity="center_vertical"
                                  android:layout_marginTop="2pt"
                                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                  android:layout_weight="1"
                                  android:id="@+id/labor_name_tv"/>
                        <TextView android:layout_width="fill_parent"
                                  android:layout_height="fill_parent"
                                  android:text="Charges : \u20B9 1000 per day"
                                  android:fontFamily="@font/samsungsansregular"
                                  android:gravity="center_vertical"
                                  android:layout_marginTop="2pt"
                                  android:layout_weight="1"
                                  android:id="@+id/labor_charges_tv"/>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="6pt"
                                      android:layout_weight="1">
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:text="Total Advance Amt : "
                                      android:fontFamily="@font/samsungsansregular"
                                      android:gravity="center_vertical"

                                      android:layout_weight="1"/>
                            <LinearLayout android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical"
                                          android:layout_weight="2">
                                <TextView android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:text="\u20B915000"
                                          android:fontFamily="@font/samsungsansbold"
                                          android:id="@+id/total_advance_amt_tv"
                                          android:gravity="center_vertical|right"/>
                                <TextView android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:text="\u20B915000"
                                          android:fontFamily="@font/samsungsansbold"
                                          android:textColor="@color/colorRed"
                                          android:gravity="center_vertical|right"
                                          android:id="@+id/total_advance_amt_minus_tv"/>

                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="3pt"
                                      android:layout_weight="1">
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:text="Current month Advance Amt : "
                                      android:fontFamily="@font/samsungsansregular"
                                      android:gravity="center_vertical"

                                      android:layout_weight="1"/>
                            <LinearLayout android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical"
                                          android:layout_weight="2">
                                <TextView android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:text="\u20B915000"
                                          android:fontFamily="@font/samsungsansbold"
                                          android:id="@+id/advance_amt_tv"
                                          android:gravity="center_vertical|right"/>
                                <TextView android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:text="\u20B915000"
                                          android:fontFamily="@font/samsungsansbold"
                                          android:textColor="@color/colorRed"
                                          android:gravity="center_vertical|right"
                                          android:id="@+id/advance_amt_minus_tv"/>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"
                                      android:orientation="horizontal"

                                      android:layout_marginTop="3pt"
                                      android:layout_weight="1">
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"
                                      android:text="Total Paid Amt : "
                                      android:fontFamily="@font/samsungsansregular"
                                      android:gravity="center_vertical"
                                      android:layout_weight="1"/>
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"
                                      android:text="\u20B95000"
                                      android:fontFamily="@font/samsungsansbold"
                                      android:gravity="center_vertical|right"
                                      android:layout_weight="1"
                                      android:id="@+id/total_paid_amt_tv"/>

                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="3pt"
                                      android:layout_weight="1">
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"
                                      android:text="Current month Paid Amt : "
                                      android:fontFamily="@font/samsungsansregular"
                                      android:gravity="center_vertical"
                                      android:layout_weight="1"/>
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"
                                      android:text="\u20B95000"
                                      android:fontFamily="@font/samsungsansbold"
                                      android:gravity="center_vertical|right"
                                      android:layout_weight="1"
                                      android:id="@+id/paid_amt_tv"/>

                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="3pt"
                                      android:layout_weight="1">
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:text="Present Days : "
                                      android:fontFamily="@font/samsungsansregular"

                                      android:layout_weight="1"/>
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:text="15"


                                      android:fontFamily="@font/samsungsansbold"
                                      android:gravity="center_vertical|right"
                                      android:layout_weight="2"
                                      android:id="@+id/present_days_tv"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="3pt"
                                      android:layout_weight="1">
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:text="Day wise Charges : "
                                      android:fontFamily="@font/samsungsansregular"

                                      android:layout_weight="1"/>
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:text="\u20B95000"


                                      android:id="@+id/day_wise_charges_tv"
                                      android:fontFamily="@font/samsungsansbold"
                                      android:gravity="center_vertical|right"
                                      android:layout_weight="2"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="3pt"
                                      android:layout_weight="1">
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:text="Remaining Pay Amt : "
                                      android:fontFamily="@font/samsungsansregular"
                                      android:gravity="center_vertical"
                                      android:layout_weight="1"/>
                            <TextView android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:text="\u20B920000"
                                      android:layout_marginTop="2pt"
                                      android:fontFamily="@font/samsungsansbold"
                                      android:gravity="center_vertical|right"
                                      android:layout_weight="2"
                                      android:id="@+id/remaining_pay_amt_tv"/>

                        </LinearLayout>
                        <View android:layout_width="fill_parent"
                              android:layout_height="5pt"/>

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
