<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardElevation="2dp">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:id="@+id/name_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/samsungsansbold"
                      android:layout_marginTop="5pt"
                      android:layout_marginLeft="5pt"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                      android:text="Labor Name"/>
            <TextView
                    android:id="@+id/mobile_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2pt"
                    android:layout_marginLeft="5pt"
                    android:fontFamily="@font/samsungsansregular"
                    android:text="Labor Mobile"/>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="2pt">
                <Button android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="15pt"
                        android:text="Payment History"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/round_btn"
                        android:fontFamily="@font/samsungsansregular"
                        android:layout_margin="3pt"
                        android:id="@+id/payment_history_btn"/>
                <Button android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="15pt"
                        android:text="Work History"
                        android:fontFamily="@font/samsungsansregular"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/round_btn"
                        android:layout_margin="3pt"
                        android:id="@+id/work_history_btn"/>

            </LinearLayout>
            <View android:layout_width="fill_parent"
                  android:layout_height="3pt"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>