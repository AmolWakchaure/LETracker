<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardElevation="2dp">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:id="@+id/name_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/samsungsansbold"
                      android:layout_marginTop="5pt"
                      android:layout_marginLeft="5pt"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                      android:text="Labor Name"/>
            <TextView
                    android:id="@+id/mobile_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2pt"
                    android:layout_marginLeft="5pt"
                    android:fontFamily="@font/samsungsansregular"
                    android:text="Labor Mobile"/>
            <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2pt"
                    android:layout_marginLeft="5pt"
                    android:layout_marginRight="3pt"
                    android:fontFamily="@font/samsungsansregular"
                    android:text="Labor Address"/>
            <TextView
                    android:id="@+id/charges_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2pt"
                    android:layout_marginLeft="5pt"
                    android:fontFamily="@font/samsungsansregular"

                    android:text="Labor Charges"/>


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="3pt"
                          android:layout_gravity="end"
                          android:visibility="gone"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <Button android:layout_width="fill_parent"
                        android:layout_height="15pt"
                        android:text="Attendance"
                        android:fontFamily="@font/samsungsansregular"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:layout_margin="0.1pt"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:background="@color/colorRed"
                        android:id="@+id/attendance_btn"/>
                <Button android:layout_width="fill_parent"
                        android:layout_height="15pt"
                        android:text="Call"
                        android:fontFamily="@font/samsungsansregular"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:layout_weight="1"
                        android:layout_margin="0.1pt"
                        android:background="@color/colorGreen"
                        android:id="@+id/call_labor_btn"/>
                <Button android:layout_width="fill_parent"

                        android:layout_height="15pt"
                        android:text="Edit"
                        android:layout_weight="1"
                        android:fontFamily="@font/samsungsansregular"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:layout_margin="0.1pt"
                        android:background="@color/colorPrimaryDark"

                        android:id="@+id/edite_labor_btn"/>

            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="0.1pt"
                          android:layout_gravity="end"
                          android:visibility="gone"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <Button android:layout_width="fill_parent"
                        android:layout_height="15pt"
                        android:text="Advance Pay"
                        android:fontFamily="@font/samsungsansregular"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:layout_margin="0.1pt"
                        android:layout_weight="1"
                        android:background="@color/design_default_color_primary"
                        android:id="@+id/avance_btn"/>
                <Button android:layout_width="fill_parent"
                        android:layout_height="15pt"
                        android:text="Payment Pay"
                        android:fontFamily="@font/samsungsansregular"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:layout_weight="1"
                        android:layout_margin="0.1pt"
                        android:background="@color/colorBriks"
                        android:id="@+id/payment_btn"/>
            </LinearLayout>

            <View android:layout_width="fill_parent"
                  android:layout_height="3pt"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>